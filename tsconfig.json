{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["cypress", "@testing-library/cypress", "@shelex/cypress-allure-plugin"],
    "baseUrl": "./",
    // "baseUrl": "src",
    // "paths": {
    //   "test-utils": ["./utils/test-utils"]
    // }
  },
  "include": [
    "src"
, "public/assets"  ]
}
